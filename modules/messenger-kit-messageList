
messenger = require ("messenger-kit-avatar")
ui = require("messenger-kit-messageListItem")

class MessageList extends Layer
	constructor: (options = {}) ->
		options.scale ?= 1
		options.width = Screen.width
		options.height = options.items * 74 * options.scale + 24 * options.scale
		options.backgroundColor = "transparent"
		super options

		for i in [0..options.items - 1]
			message = new ui.MessageListItem
				parent: @
			message.y = options.scale * i * 74

exports.MessageList = MessageList
